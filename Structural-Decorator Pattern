#Pizza toppings
class Pizza:
    def cost(self): return 100

class ToppingDecorator(Pizza):
    def __init__(self, pizza): self.pizza = pizza
    def cost(self): return self.pizza.cost()

class Cheese(ToppingDecorator):
    def cost(self): return super().cost() + 30

class Olives(ToppingDecorator):
    def cost(self): return super().cost() + 20

pizza = Cheese(Olives(Pizza()))
print("Pizza cost:", pizza.cost())
